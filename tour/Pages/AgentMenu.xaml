<Page x:Class="tour.Pages.AgentMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tour.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AgentMenu" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="entered_as" >Вы вошли в систему как</TextBlock>
            <Button Style="{StaticResource basic}" Name="registration" Width="auto" Click="registration_Click">Зарегистрировать нового клиента</Button>
            <Button Style="{StaticResource basic}" Name="findtour" Width="auto" Click="findtour_Click">Найти подходщий тур</Button>
            <Button Name="exit" Click="exit_Click">Выход</Button>
        </StackPanel>  
    </Grid>
</Page>
