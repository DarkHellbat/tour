<Page x:Class="tour.Pages.DirMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tour.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DirMenu">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="entered_as" >Вы вошли в систему как</TextBlock>
            <Button Style="{StaticResource basic}" Name="registration" Width="auto">Просмотреть отчеты по продажам</Button>
            <Button Style="{StaticResource basic}" Name="findtour" Width="auto">Просмотреть список претензий</Button>

        </StackPanel>
    </Grid>
</Page>
