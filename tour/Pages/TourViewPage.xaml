<Page x:Class="tour.Pages.TourViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tour.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TourViewPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
<TextBlock x:Name="name"></TextBlock>
        <StackPanel Grid.Row="1" >
            <TextBlock x:Name="rate"></TextBlock>
            <TextBlock x:Name="days"></TextBlock>
            <TextBlock x:Name="cost"></TextBlock>
            <TextBlock x:Name="descr" TextWrapping="Wrap"></TextBlock>
            <Image Name="im1"></Image>
            <Image Name="im2"></Image>
            <Image Name="im3"></Image>
        </StackPanel>
        <Button Grid.Row="1" Style="{StaticResource basic}" Name="next" Click="next_Click" VerticalAlignment="Bottom">--></Button>
    </Grid>
    
</Page>
